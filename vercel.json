{
	"version": 2,
	"framework": null,
	"buildCommand": "cd frontend && rm -rf node_modules && npm ci --include=dev && npm run build",
	"outputDirectory": "frontend/dist",
	"installCommand": "pip install --break-system-packages -r api/requirements.txt",
	"rewrites": [
		{
			"source": "/((?!api|assets).*)",
			"destination": "/index.html"
		}
	],
	"headers": [
		{
			"source": "/api/(.*)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "no-store, must-revalidate"
				}
			]
		}
	]
}
